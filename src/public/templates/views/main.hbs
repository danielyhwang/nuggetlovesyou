                    <input type="text" class="form-control" id="imageFormPhotographer" placeholder="???" required maxlength="70">
                  </div>
                  <div class="form-group">
                    <label for="imageFormNuggetPhoto">Upload Nugget Photo Here (limit: 1MB)</label>
                    <input type="file" class="form-control-file" id="imageFormNuggetPhoto" required accept = "image/*">
                  </div>
                  <div class="form-group">
                    <label for="imageFormDescriptionAlt">Description (short 1-sentence summary of what's in your photo).</label>
                    <input type="text" class="form-control" id="imageFormDescriptionAlt" placeholder="FDR" required maxlength = "140">
                  </div>
                  <div class = "modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
              <!-- QUOTE FORM-->
