                <form id = "quoteForm">
                  <div class="form-group">
                    <label for="quoteFormQuote" class = "control-label">Quote (maximum 140 characters).</label>
                    <input id = "quoteFormQuote" name = "quote" type="text" class="form-control" placeholder="The only thing we have to fear is fear itself." required maxlength = "140">
                  </div>
                  <div class="form-group">
                    <label for="quoteFormAuthor" class = "control-label">Author (who said the quote?)</label>
                    <input id = "quoteFormAuthor" name = "author" type="text" class="form-control" placeholder="FDR" required maxlength = "70">
                  </div>
                  <div class = "modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
