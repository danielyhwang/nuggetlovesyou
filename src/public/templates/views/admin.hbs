<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

  <!-- Our Custom CSS -->
  <link rel="stylesheet" href="./css/styleAdmin.css" />

  <title>Admin - Nugget â™¥s You</title>
</head>

<body>
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a href="#imageAdmin" class="nav-link active" data-toggle="tab">Image</a>
    </li>
    <li class="nav-item">
      <a href="#quoteAdmin" class="nav-link" data-toggle="tab">Quote</a>
    </li>
    <li class="nav-item">
      <a href="#settingsAdmin" class="nav-link" data-toggle="tab">Settings</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade show active" id="imageAdmin">
      <table class="table" id = "imageTable">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Photographer</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody id = "imageTableBody">
        </tbody>
      </table>

      
      <nav aria-label="Image pagination">
        <ul class="pagination" id = "imagePagination">
          <li class="page-item"><a class="page-link" id = "imagePaginationDec">Previous</a></li>
          <li class="page-item"><a class="page-link" id = "imagePaginationIndex">1</a></li>
          <li class="page-item"><a class="page-link" id = "imagePaginationInc">Next</a></li>
        </ul>
      </nav>
    </div>
    <div class="tab-pane fade" id="quoteAdmin">
      <table class="table" id = "quoteTable">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Quote</th>
            <th scope="col">Author</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody id = "quoteTableBody">

        </tbody>
      </table>
      
      <nav aria-label="Quote pagination">
        <ul class="pagination" id = "quotePagination">
          <li class="page-item"><a class="page-link" id = "quotePaginationDec">Previous</a></li>
          <li class="page-item"><a class="page-link" id = "quotePaginationIndex">1</a></li>
          <li class="page-item"><a class="page-link" id = "quotePaginationInc">Next</a></li>
        </ul>
      </nav>

    </div>
    <div class="tab-pane fade" id="settingsAdmin">
      <form action = "/logoutAll" method = "post">
        <button type="submit" class="btn btn-danger" name = "logout">Logout</button>
      </form>
    </div>
  </div>
  

  <!-- Display Image Modal -->
  <div class="modal fade" id="displayImageModal" tabindex="-1" aria-labelledby="displayImageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="displayImageModalLabel">Image</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <img id = "displayedImage"/>
        </div>
      </div>
    </div>
  </div>

  <!-- Patch Image Admin Modal -->
  <div class="modal fade" id="patchImageAdminModal" tabindex="-1" aria-labelledby="patchAdminImageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="patchAdminImageModalLabel">Change Image - Admin</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="imageForm">
            <div class="form-group">
              <label for="imageFormId">Image ID</label>
              <input type="text" class="form-control" id="imageFormId" value="" disabled/>
            </div>
            <div class="form-group">
              <label for="imageFormPhotographer">Name (gotta give you photo creds! Or type in Anonymous.)</label>
              <input type="text" class="form-control" id="imageFormPhotographer" placeholder="???" required maxlength="70">
            </div>
            <div class="form-group">
              <label for="imageFormDescriptionAlt">Description (short 1-sentence summary of what's in your
                photo).</label>
              <input type="text" class="form-control" id="imageFormDescriptionAlt" placeholder="FDR" required maxlength="140">
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Patch Quote Admin Modal -->
  <div class="modal fade" id="patchQuoteAdminModal" tabindex="-1" aria-labelledby="patchAdminQuoteModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="patchAdminQuoteModalLabel">Change Quote - Admin</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="quoteForm">
            <div class="form-group">
              <label for="quoteFormId">Image ID</label>
              <input type="text" class="form-control" id="quoteFormId" value="" disabled/>
            </div>
            <div class="form-group">
              <label for="quoteFormQuote" class="control-label">Quote (maximum 140 characters).</label>
              <input id="quoteFormQuote" name="quote" type="text" class="form-control"
                placeholder="The only thing we have to fear is fear itself." required maxlength="140">
            </div>
            <div class="form-group">
              <label for="quoteFormAuthor" class="control-label">Author (who said the quote?)</label>
              <input id="quoteFormAuthor" name="author" type="text" class="form-control" placeholder="FDR" required
                maxlength="70">
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
    crossorigin="anonymous"></script>

  <!-- Our Custom JS -->
  <!-- <script src="../../../../node_modules/howler/src/howler.core.js"> </script> -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.0.8/howler.js"></script>
  <script src="../../js/loadAdminPage.js"></script>
</body>

</html>